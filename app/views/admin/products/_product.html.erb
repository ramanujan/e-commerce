<div class="row-fluid">
	
	<!-- Image -->
	<div class="span2">
     <%if product.assets.any? %>
       <%=image_tag product.assets.first.image(:thumb)%>	
     <%else%>
       <%=image_tag "thumb/missing.png"%>
     <%end%> 
    </div>	
	
	<!-- Title -->
	<div class="span5">
	  <%=link_to( [:admin,product] ) do %>
	    <h2><%=product.title%></h2>
	  <%end%> 
	</div>
	
	<!--Description -->
	<div class="span3 product_description_small">
	  <%=brief(sanitize(product.description))%>
	</div>
	
	<div class="span1">
      
      <div class="row-fluid">
        <%=render :partial=>'update_qty_form',:locals=>{:product=>product}  %> 
      </div>
      
    </div>
	
</div>
